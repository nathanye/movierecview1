<div class="col-md-12">
  <div class="movie">
    <% if current_user && current_user == @movie.user %>
      <%= link_to("编辑", edit_movie_path(@movie), class: "btn btn-primary pull-right") %>
      <%= link_to("增加评论", new_movie_review_path(@movie), class: "btn btn-default pull-right") %>
    <% end %>
  </div>
  <h2><%= @movie.title %></h2>
  <p><%= @movie.description %></p>
</div>
